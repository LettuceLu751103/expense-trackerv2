<form action="/{{list._id}}?_method=PUT" method="POST">
  <div class="row mt-5 text-align-center">
    <div class="col-md-2">*必填欄位</div>
    <div class="col-md-2 font-weight-bold text-danger">請輸入你的支出</div>
  </div>
  <div class="row mt-5 align-items-center">
    <div class="col-md-2">
      <label for="name">名稱</label>
    </div>
    <div class="col-md-8">
      <input type="text" class="form-control" id="name" name="name" value="{{list.name}}" required>
    </div>
  </div>

  <div class="row mt-5 align-items-center">
    <div class="col-md-2">
      <label for="date">日期</label>
    </div>
    <div class="col-md-8">
      <input id="date" type="date" value="{{list.date}}" class="form-control" id="date" name="date" required>
    </div>
  </div>

