    <div class="col-md-2">
      <label for="inputState">類別</label>
    </div>
    <div class="col-md-8">
      <select id="inputState" class="form-control" name="type" required>

      </select>
    </div>
  </div>

  <div class="row mt-5 align-items-center">
    <div class="col-md-2">
      <label for="amount">金額</label>
    </div>
    <div class="col-md-8">
      <input type="number" class="form-control" id="amount" min="0" name="amount" value="{{list.amount}}" required>
    </div>
  </div>

  <div class="row mt-3 align-items-center">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
      <button type="submit" class="btn btn-outline-secondary btn-lg btn-block mt-4">Submit</button>
    </div>
  </div>
</form>

